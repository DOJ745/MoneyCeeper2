<Window x:Class="MoneyCeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyCeeper"
        mc:Ignorable="d"
        Title="Куда деваются мои деньги?" Height="600" Width="800"
        Loaded="Window_Loaded">

    <Grid>
        <Button x:Name="MainLoginButton" 
                Content="Войти под своей учёной записью" 
                Margin="287,450,292,94" 
                Width="213" Height="25"
                Command="{Binding Path=DoCommand}"/>
        
        <Frame x:Name="MainFrame" 
               BorderBrush="Black" 
               Background="#FFF0E506" 
               Margin="0,0,0,138"/>
        
        <TextBox x:Name="TextBox1" 
                 HorizontalAlignment="Left" 
                 Height="23" Margin="333,480,0,0" TextWrapping="Wrap" 
                 Text="TextBox" 
                 VerticalAlignment="Top" Width="120"/>

    </Grid>

</Window>
