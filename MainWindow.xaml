<Window x:Class="MoneyCeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyCeeper"
        mc:Ignorable="d"
        Title="Куда деваются мои деньги?" 
        Height="600" Width="800">

    <Window.DataContext>
        <local:ApplicationViewModel/>
    </Window.DataContext> 

    <Grid>
        <Button x:Name="MainLoginButton" 
                Content="Войти под своей учёной записью" 
                Margin="288,265,0,261" 
                Width="213" Height="35" 
                Command="{Binding ShowTextCommand}" 
                HorizontalAlignment="Left"/>
        
        <Frame x:Name="MainFrame" 
               BorderBrush="Black" 
               Background="#FFF0E506" 
               Margin="0,0,10,301"/>
        
        <TextBox x:Name="MainTextBox" 
                 HorizontalAlignment="Left" 
                 Height="23" Margin="331,305,0,0" TextWrapping="Wrap" 
                 Text="Simple text" 
                 VerticalAlignment="Top" Width="120"/>

    </Grid>

</Window>
