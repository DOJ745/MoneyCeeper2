<Window x:Class="MoneyCeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyCeeper"
        mc:Ignorable="d"
        Title="Куда деваются мои деньги?" 
        Height="600" Width="800">

    <Window.Resources>
        <ResourceDictionary Source="Styles\MainWindowStyle.xaml"/>
    </Window.Resources>

    <!--<Window.DataContext>
        <local:ApplicationViewModel/>
    </Window.DataContext> -->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Margin="5">

            <!-- <Button x:Name="MainLoginButton" 
                Content="Войти под своей учёной записью" 
                Width="200" Height="35" 
                Command="{Binding ShowTextCommand}" 
                HorizontalAlignment="Left"/>

            <TextBox x:Name="MainTextBox" 
                 HorizontalAlignment="Left" 
                 Text="Simple text" 
                 VerticalAlignment="Top" Width="120"/> -->

            <Button Command="{Binding LoadMainUCCommand, Mode=OneTime}"
                    Style="{StaticResource ResourceKey=ButtonStyle}">
                <TextBlock>Login Page</TextBlock>
            </Button>
            
            <Button Command="{Binding LoadFirstUCCommand, Mode=OneTime}"
                    Style="{StaticResource ResourceKey=ButtonStyle}">
                <TextBlock>Registration page</TextBlock>
            </Button>
            
            <Button Command="{Binding LoadSecondUCCommand, Mode=OneTime}"
                    Style="{StaticResource ResourceKey=ButtonStyle}">
                <TextBlock>Exit</TextBlock>
            </Button>

        </StackPanel>
        

    </Grid>

</Window>
