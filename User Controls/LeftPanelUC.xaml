<UserControl x:Class="MoneyCeeper.User_Controls.LeftPanelUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoneyCeeper.User_Controls"
             mc:Ignorable="d" 
             MinHeight="490" 
             MinWidth="150"
             Width="290">
    
    <Grid Background="Bisque">

        <StackPanel x:Name="FilterButtons">
            <Label Content="Сортировка"></Label>
            
            <RadioButton Content="По умолчанию"></RadioButton>
            <RadioButton Content="По цене"></RadioButton>
            <RadioButton Content="По дате"></RadioButton>
            <RadioButton Content="По описанию"></RadioButton>
        </StackPanel>
    </Grid>
    
</UserControl>
